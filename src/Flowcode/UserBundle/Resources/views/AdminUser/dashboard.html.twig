{% extends 'backend.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ url('admin_dashboard') }}">{{ 'home'|trans }}</a></li>
        <li>{{ 'user dashboard'|trans }}</li>
    </ol>

    <div class="page-header">
        <h1>{{ 'users'|trans|title }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="row">
                <div class="col-sm-4 tile">
                    <a class="btn btn-primary btn-block" href="{{ url('admin_user') }}">
                        <div><i class="glyphicon glyphicon-user"></i></div>
                            {{ 'users'|trans|capitalize }}
                    </a>
                </div>
                <div class="col-sm-4 tile">
                    <a class="btn btn-primary btn-block" href="{{ url('admin_usergroup') }}">
                        <div><i class="glyphicon glyphicon-list"></i></div>
                            {{ 'user groups'|trans|capitalize }}
                    </a>
                </div>

            </div>
        </div>
    </div>

{% endblock %}