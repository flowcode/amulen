<link href="{{ asset('css/slimslider.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

<h3>{{ welcome }}</h3>
<div class="row">

    <div class="col-sm-6">
        {{ render(controller('FlowcodeMediaBundle:Slider:mainSlider', {
        'max': 3
    })) }}
    </div>
    <div class="col-sm-6">
