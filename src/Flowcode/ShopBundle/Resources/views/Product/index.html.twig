{% extends 'FlowcodeShopBundle::shop.html.twig' %}

{% block products -%}
<div class="row">
    {% for entity in pagination %}
    <div class="col-sm-4">
        <div class="product-image-wrapper">
            <div class="single-products">
                <div class="productinfo text-center">
                    <img src="{{ asset( entity.getImage.getWebPath ) }}" alt="" />
                    <h2>${{ entity.price }}</h2>
                    <p>{{ entity.name }}</p>
                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                </div>
                <div class="product-overlay">
                    <div class="overlay-content">
                        <h2>${{ entity.price }}</h2>
                        <p>{{ entity.name }}</p>
                        <p>{{ entity.description }}</p>
                        <a href="{{ path('product_show', { 'slug': entity.slug }) }}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Ver Mas</a>
                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                    </div>
                </div>
            </div>
            <div class="choose">
                <ul class="nav nav-pills nav-justified">
                    <li><a href=""><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                    <li><a href=""><i class="fa fa-plus-square"></i>Add to compare</a></li>
                </ul>
            </div>
        </div>
    </div>
    {% else %}
    <div>no results</div>
    {% endfor %}
</div>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
