{% extends '::backend.html.twig' %}

{% block body -%}
<ol class="breadcrumb">
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Productos</a></li>
    <li class="active">{{ entity.name }}</li>
</ol>
<div class="page-header">
    <h1>Product
        <small>{{ entity.name }}</small>
    </h1>
    <ul class="list-inline">

        <li>
            <a class="btn btn-default" href="{{ path('admin_product') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a class="btn btn-default" href="{{ path('admin_product_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
</div>
<div class="row">
    <div class="col-sm-8">
        <div class="panel panel-default">
            <div class="panel-heading">Datos del producto</div>
            <table class="table table-condensed">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ entity.content|raw }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ entity.price }}</td>
                    </tr>
                    <tr>
                        <th>Enabled</th>
                        <td>{{ entity.enabled }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <a href="{{ path('admin_gallery_items', { 'id': entity.getMediaGallery.id }) }}" class="btn btn-info">Editar galeria</a>
        <div class="well">
            <div class="row">
                {% for galleryItem in entity.getMediaGallery.getGalleryItems %}
                <div class="col-sm-3">
                    <a class="thumbnail">
                        <img src="{{ asset(galleryItem.media.getWebPath) }}" alt="{{ galleryItem.media.name }}" class="img-responsive">
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <img src="{{ asset(entity.getImage.getWebPath) }}" alt="{{ entity.getImage.name }}" class="img-responsive">
    </div>
</div>
{% endblock %}
