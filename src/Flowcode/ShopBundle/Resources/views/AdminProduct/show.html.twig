{% extends '::backend.html.twig' %}

{% block body -%}
<ol class="breadcrumb">
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Productos</a></li>
    <li class="active">{{ entity.name }}</li>
</ol>
<div class="page-header">
    <h1>Product
        <small>{{ entity.name }}</small>
    </h1>
    <ul class="list-inline">

        <li>
            <a class="btn btn-default" href="{{ path('admin_product') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a class="btn btn-default" href="{{ path('admin_product_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
</div>
<div class="row">
    <div class="col-sm-4">
        <img src="{{ entity.getImage }}" alt="..." class="img-responsive">
    </div>
    <div class="col-sm-8">
        <table class="record_properties table table-condensed">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ entity.content }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ entity.price }}</td>
                </tr>
                <tr>
                    <th>Enabled</th>
                    <td>{{ entity.enabled }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<hr/>
<div>
    <h3>Galería de Imagenes</h3>
    <ul class="record_actions list-inline">
        <li>
            <a href="{{ path('admin_product_edit_media', { 'id': entity.id }) }}" class="btn btn-sm btn-default">Cambiar Orden</a>
        </li>
        <li>
            <a href="{{ path('admin_product_edit_media', { 'id': entity.id }) }}" class="btn btn-sm btn-default">Nueva Imágen</a>
        </li>
    </ul>
    <div class="row">
        {% for galleryItem in entity.getMediaGallery.getGalleryItems %}
        <div class="col-sm-3">
            <a href="" class="thumbnail">
                <img src="/{{ galleryItem.media.getWebPath }}" class="img-responsive">
            </a>
            <ul class="list-inline">
                <li><a href="#">Editar</a></li>
                <li><a href="#">Borrar</a></li>
            </ul>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
