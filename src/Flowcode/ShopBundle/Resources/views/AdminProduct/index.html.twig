{% extends '::backend.html.twig' %}

{% block migas %}
    {{parent()}}
    <li><a href="{{ path('admin_shop_dashboard') }}">{{"Tablero de al tienda"|trans}}</a></li>
    <li>{{ "Productos"|trans }}</li>
{% endblock %}

{% block body %}

<div class="page-header">
    <h1>{{ "Productos"|trans|title }}</h1>
    <ul class="list-inline">
        <li>
            <a href="{{ path('admin_product_new') }}" class="btn btn-default">
                {{ "Crear producto"|trans }}
            </a>
        </li>
    </ul>
</div>
<table class="records_list table table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>{{ "Nombre"|trans }}</th>
            <th>{{ "Descripcion"|trans }}</th>
            <th>{{ "Precio"|trans }}</th>
            <th>{{ "Habilitado"|trans }}</th>
            <th>{{ "Acciones"|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.enabled ? 'yes'|trans : 'no'|trans }}</td>
            <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('admin_product_show', { 'id': entity.id }) }}">{{ "show"|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_product_edit', { 'id': entity.id }) }}">{{ "edit"|trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}
