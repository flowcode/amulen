{% extends '::backend.html.twig' %}

{% block body -%}
<ol class="breadcrumb">
    <li><a href="{{ path('admin_dashboard') }}">Home</a></li>
    <li><a href="{{ path('admin_shop_dashboard') }}">Shop Dashboard</a></li>
    <li>{{ "products"|trans }}</li>
</ol>
<div class="page-header">
    <h1>{{ "products"|trans|title }}</h1>
    <ul class="list-inline">
        <li>
            <a href="{{ path('admin_product_new') }}" class="btn btn-default">
                {{ "create new"|trans }}
            </a>
        </li>
    </ul>
</div>
<table class="records_list table table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>{{ "name"|trans }}</th>
            <th>{{ "description"|trans }}</th>
            <th>{{ "price"|trans }}</th>
            <th>{{ "enabled"|trans }}</th>
            <th>{{ "actions"|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.enabled ? 'yes'|trans : 'no'|trans }}</td>
            <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('admin_product_show', { 'id': entity.id }) }}">{{ "show"|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_product_edit', { 'id': entity.id }) }}">{{ "edit"|trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}
