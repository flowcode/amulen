{% extends '::backend.html.twig' %}

{% block body -%}
<ol class="breadcrumb">
    <li><a href="{{ path('admin_dashboard') }}">Home</a></li>
    <li><a href="{{ path('admin_shop_dashboard') }}">Shop Dashboard</a></li>
    <li>Products</li>
</ol>
<h1>Product list</h1>

<table class="records_list table table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Enabled</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.enabled }}</td>
            <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('admin_product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_product_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
    {% endblock %}
