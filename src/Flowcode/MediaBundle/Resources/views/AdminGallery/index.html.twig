{% extends '::backend.html.twig' %}

{% block body -%}
<h1>Gallery list</h1>

<table class="records_list table table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Enabled</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_gallery_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.enabled }}</td>
            <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('admin_gallery_items', { 'id': entity.id }) }}">items</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_gallery_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_gallery_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_gallery_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
    {% endblock %}
